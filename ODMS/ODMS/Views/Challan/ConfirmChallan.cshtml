                                $('input[name="sku_id"]').each(function() {
                                    var skuid = $(this).val();
                                    if (skuid) {
                                        skuList.push(skuid);
                                    }
                                });
                                return skuList;
                            }

                            function add_row() {
                                var skuList = block_SkuList();
        
                                sku_row_count++;
                                var count = sku_row_count;
                                $.ajax({
                                    type: "POST",
                                    url: "/Challan/AddRow",
                                    data: { count: count, skuList: skuList },
                                    dataType: "HTML",
                                    async: "true",
                                    cache: "false",
                                    success: function(data) {
                                        $("#tbody_order").append(data);
                                        $("select").select2();
                                    }
                                });
                            }

                            $("table").on('click',
                                '#removeLine',
                                function() {
                                    $(this).parent('td').parent('tr').remove();
                                    //grand_total_amount();
                                });


                            function get_unit_price(id) {
                                
