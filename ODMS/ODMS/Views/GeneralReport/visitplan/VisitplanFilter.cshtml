@model IEnumerable<ODMS.Models.ViewModel.CurrentVisitplanVm>



<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix ">

        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Region</th>
                    <th>Area</th>
                    <th>CE Area</th>
                    <th>DB House</th>
                    <th>PSR Name</th>
                    <th>Sub Route Name</th>
                    <th>Number Of Outlet</th>
                    <th>Ordered Outlet</th>
                    <th>Not Ordered Outlet</th>
                    <th>Not Visited Outlet</th>
                    <th>Action</th>



                </tr>
            </thead>

            <tbody>


                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @item.Date.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Region)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CeArea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DbHouse)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PsrName)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.SubRouteName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfOutlet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOforderedoutlet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfnotorderedoutlet)
                        </td>
                        <td>
                            @{ int notvisited = item.NumberOfOutlet - item.NumberOforderedoutlet - item.NumberOfnotorderedoutlet; }
                            @notvisited
                        </td>
                        <td>
                            <a class="btn btn-primary btn-flat btn-sm" href="/GeneralReport/Visitplandetails/@item.PsrId?date=@item.Date.ToString("dd-MM-yyyy")">Details</a>
                           
                        </td>



                    </tr>
                }

        </table>
    </div>
</div>
