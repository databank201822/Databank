@*Trade Promotion Type*@
<div class="row">

    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading ">
                <div class="clearfix ">
                    Trade Promotion Condition

                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-2">
                    Offer Type
                </div>

                <div class="col-md-2">

                    @Html.DropDownList("TPOfferType", (IEnumerable<SelectListItem>)ViewBag.OfferType, new { @class = "form-control", @onchange = "OrderConditionPart();" })

                </div>
                <div class="col-md-2">
                    Condition Type
                </div>
                <div class="col-md-2">

                    @Html.DropDownList("TPConditionType", (IEnumerable<SelectListItem>)ViewBag.ConditionType, new { @class = "form-control" })


                </div>
                <div class="col-md-2">
                    Promotion Type
                </div>
                <div class="col-md-2">

                    @Html.DropDownList("TPPromotionType", (IEnumerable<SelectListItem>)ViewBag.PromotionType, new { @class = "form-control", @onchange = "OrderConditionPart();" })


                </div>
            </div>
        </div>
    </div>
