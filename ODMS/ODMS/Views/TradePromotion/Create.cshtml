<div id="OrderConditionPart"></div>



<div class="row">

    <div class="col-md-12">
        <input type="button" onclick="savedata()" value="Save" class="btn btn-primary btn-lg pull-right" />
    </div>
</div>



<script>
    
    var sku_row_count = -1;
    @{
        DateTime systemDate = DateTime.Now;
    }

    $(document).ready(function () {
        
        $("#StartDate,#EndDate").datepicker(
            {
                dateFormat: 'dd-mm-yy'
            }
        );
        $("#StartDate,#EndDate").val('@systemDate.ToString("dd-MM-yyyy")');
        $('.multiselect').multiselect().multiselectfilter();

        OrderConditionPart();
      

    });


  

    function OrderConditionPart() {

        var tpOfferType = $("#TPOfferType").val();
        var tpPromotionType = $("#TPPromotionType").val();

        $.ajax({
            type: "POST",
            url: "/TradePromotion/GetOrderConditionPart",
            data: { offerType: tpOfferType, promotionType: tpPromotionType },
            dataType: "HTML",
            error: function () {
                alert("Sorry");
            },
            success: function (data) {
                $("#OrderConditionPart").html("");
                $("#OrderConditionPart").html(data);

            }
        });
    }



</script>
